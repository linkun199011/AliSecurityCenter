<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
		<ImageView
		    android:id="@+id/cumstom_title_seperator"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/imageview_seperator"
		    android:layout_alignParentTop="true"
		    android:background="@color/gray"
		    android:contentDescription="@string/Static_Separators_iv" />

        <Button
            android:id="@+id/cancle_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="  撤销  |"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/contacts_count"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="|  添加  "
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/add_private_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative"
        android:divider="@null" >
    </ListView>

</RelativeLayout>