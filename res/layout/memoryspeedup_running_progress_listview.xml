<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/darkgrey"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/running_progress_tv_bar0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/Static_RunningProgress_tv_bar0" />
        <TextView
            android:id="@+id/running_progress_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="" />
        <TextView
            android:id="@+id/running_progress_tv_bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/Static_RunningProgress_tv_bar1" />
        <TextView
            android:id="@+id/running_progress_tv_memsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="" />
    </LinearLayout>

    <ListView
        android:id="@+id/running_progress_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>